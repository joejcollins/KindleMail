@{
    ViewBag.Title = "Sign In";
}
@model WebApp.Models.MessageListSummary

<div>
    Messages: @Model.Total
</div>
<table>
    <thead>
        <tr>
            <th>From</th>
            <th>Title</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var messageSummary in Model.MessageSummaries)
        {
        <tr>
            <td>
                <div class="container">
                    <div class="content">@messageSummary.From</div>
                    <div class="spacer">@messageSummary.From</div>
                    <span>&nbsp;</span>
                </div>
            </td>
            <td>
                <div class="container">
                    <div class="content">@messageSummary.Title</div>
                    <div class="spacer">@messageSummary.Title</div>
                    <span>&nbsp;</span>
                </div>
            </td>
        </tr>
        }
    </tbody>
</table>